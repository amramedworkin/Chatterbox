{
  "env": {
    "node": true,    // Enables Node.js global variables and Node.js scoping.
    "es2021": true   // Adds all ECMAScript 2021 globals and parsing features.
  },
  "extends": [
    "eslint:recommended",    // Recommended ESLint rules for general best practices
    "plugin:prettier/recommended" // Integrates Prettier rules with ESLint
  ],
  "parserOptions": {
    "ecmaVersion": 12,       // Allows parsing of modern ECMAScript features
    "sourceType": "module"   // Allows using import/export syntax (ES Modules)
  },
  "rules": {
    // Custom rules or overrides can go here.
    "no-console": "off",
    "no-unused-vars": "warn" // Treat as warning instead of error
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "**/*.spec.js", "**/test/**/*.js"], // Apply these settings to test files
      "env": {
        "jest": true // This enables Jest global variables for test files
      },
      "extends": [
        "plugin:jest/recommended" // Recommended Jest rules
      ],
      "rules": {
        // You can add specific rules for test files here if needed
        "jest/valid-expect": "error"
      }
    }
  ]
}